{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/esm",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018"
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src",
    "test"
  ]
}
